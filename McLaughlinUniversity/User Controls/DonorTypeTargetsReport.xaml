<UserControl x:Class="McLaughlinUniversity.DonorTypeTargetsReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:McLaughlinUniversity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Name="dgDonorTypeTargetsReport" Margin="0,45,0,0"/>
        <Button Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="400,10,0,0" VerticalAlignment="Top" Click="btnSubmit_Click"/>
        <ComboBox Name="cmbYear" HorizontalAlignment="Left" Margin="275,7,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="2021"/>
            <ComboBoxItem Content="2020"/>
            <ComboBoxItem Content="2019"/>
            <ComboBoxItem Content="2018"/>
            <ComboBoxItem Content="2017"/>
            <ComboBoxItem Content="2016"/>
            <ComboBoxItem Content="2015"/>
            <ComboBoxItem Content="2014"/>
            <ComboBoxItem Content="2013"/>
            <ComboBoxItem Content="2012"/>
            <ComboBoxItem Content="2011"/>
        </ComboBox>
        <Label Content="Year" HorizontalAlignment="Left" Margin="226,7,0,0" VerticalAlignment="Top" Width="44"/>
    </Grid>
</UserControl>
